{
"manifest_version": 3,
"name": "Strike Notepad",
"version": "1.0",
"description": "A simple notepad where you can write and strike through tasks.",
"action": {
"default_popup": "ui.html",
"default_icon": "icon.png"
},
"permissions": ["storage", "activeTab"],
"background": {
"service_worker": "background.js"
},
"content_scripts": [
{
"matches": ["<all_urls>"],
"js": ["content.js"]
}
]
}